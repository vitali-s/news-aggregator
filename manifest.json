{
  "name": "News Aggregator",
  "description": "Helps with collecting news",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "Vitali Shcharbin",

  "icons": { 
    "16": "images/default-icon-16.png",
    "48": "images/default-icon-48.png",
    "128": "images/default-icon-128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": ["activeTab", "storage", "*://*/*", "clipboardWrite", "clipboardRead"],

  "browser_action": {
    "default_title": "News Aggregator",
    "default_icon": "images/default-icon-48.png",
    "default_popup": "views/menu.html"
  }
}
